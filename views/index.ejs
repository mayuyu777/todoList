<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TO DO LIST</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.6.0/dist/umd/popper.min.js" integrity="sha384-KsvD1yqQ1/1+IA7gi3P0tyJcT3vR+NdBTt13hSJ2lnve8agRGXTTyNaBYmCR/Nwi" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.min.js" integrity="sha384-nsg8ua9HAw1y0W1btsyWgBklPnCUAFLuTMS2G72MMONqmOymq585AcH49TLBQObG" crossorigin="anonymous"></script>
</head>
<body>
    <div class="container" style="width: 30%; height: 50%; padding-top: 3pc;">
        <center><h1>Welcome to TODO</h1></center>
        <% if(typeof message!=='undefined') {%>
        <label style="margin-top: 2pc;color: red;"><%= message%></label>
        <% } %>
        <div class="row" >
            <div class="col align-self-center" style="padding-top: 1pc; display: block;" id="signin">
                <form method="POST" action="/signin">
                    <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label">Email address</label>
                    <input type="email" class="form-control" name="email" aria-describedby="emailHelp" required>
                    </div>
                    <div class="mb-3">
                    <label for="exampleInputPassword1" class="form-label">Password</label>
                    <input type="password" class="form-control" name="password" required>
                    </div>
                    <button type="submit" class="btn btn-primary" >Sign in</button>
                </form>
                <a href="#" id="0">Create Account?</a>
             </div>
             <div class="col align-self-center" style="padding-top: 1pc; display: none;" id="signup" >
                <form method="POST" action="/create_account">
                    <div class="mb-3">
                        <label class="form-label">Full Name</label>
                        <input type="text" class="form-control" name="name" aria-describedby="emailHelp" required>
                        </div>
                    <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label">Email address</label>
                    <input type="email" class="form-control" name="email" aria-describedby="emailHelp" required>
                    </div>
                    <div class="mb-3">
                    <label for="exampleInputPassword1" class="form-label">Password</label>
                    <input type="password" class="form-control" name="password" required>
                    </div>
                    <button type="submit" class="btn btn-primary" >Sign up</button>
                </form>
                <a href="#" id="1">Already have an account?</a>
             </div>
        </div>
    </div>
    <script>
    
        var sign_in = document.getElementById("signin");
        var sign_up = document.getElementById("signup");
        document.getElementById("0").addEventListener("click",()=>{
            sign_in.style.display = "none";
            sign_up.style.display = "block";
            
        })
        document.getElementById("1").addEventListener("click",()=>{
            sign_in.style.display  = "block";
            sign_up.style.display = "none";
        })
    </script>
</body>
</html>